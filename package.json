{
  "name": "uphold-currency-converter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:client": "parcel build --public-url ./dist/ ./src/app/index.js",
    "build:dev": "parcel watch --public-url ./dist/ ./src/app/index.js | parcel watch -d dist-server --target node ./src/server/index.js",
    "build:server": "parcel build -d dist-server --target node ./src/server/index.js",
    "build": "npm run build:client && npm run build:server",
    "dev": "npm run build && parcel --public-url ./dist/ ./src/app/index.js | parcel -d dist-server --target nodemon ./src/server/index.js | nodemon ./dist-server/index.js",
    "start": "npm run build && node ./dist-server/index.js",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint:fix": "./node_modules/.bin/eslint --fix ./src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Matthew Benjamin",
  "license": "ISC",
  "dependencies": {
    "@uphold/uphold-sdk-javascript": "^2.4.0",
    "big.js": "^6.1.1",
    "express": "^4.17.1",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "eslint": "^7.29.0",
    "eslint-config-uphold": "^2.0.0",
    "eslint-config-uphold-react": "^1.0.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.3.1"
  },
  "eslintConfig": {
    "extends": [
      "uphold-react",
      "plugin:unicorn/recommended"
    ],
    "rules": {
      "no-process-env": "off",
      "unicorn/no-array-reduce": "off",
      "react/prop-types": "off",
      "unicorn/no-null": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
